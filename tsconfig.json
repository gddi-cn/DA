{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsxdev",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@views/*": ["./src/views/*"],

      "@router/*": ["./src/router/*"],
      "@router": ["./src/router"],
      "@api": ["./src/net"],
      "@reducer/*": ["./src/controller/reducer/*"],
      "@reducer": ["./src/controller/reducer"],
      "@ghooks": ["./src/views/ghooks"],
      "@ghooks/*": ["./src/views/ghooks/*"],
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}